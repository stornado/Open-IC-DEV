				"ryu1kn.partial-diff",
				"webfreak.debug",
				"adpyke.codesnap",
				"foxundermoon.shell-format",
				"marclipovsky.string-manipulation",
				"Hyeon.c-math-viewer",
				"buster.ndjson-colorizer",
				"ms-vscode.cmake-tools",
				"wayou.vscode-todo-highlight"
			]
		}
